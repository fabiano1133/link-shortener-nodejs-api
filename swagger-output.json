{
  "swagger": "2.0",
  "info": {
    "title": "SHORTENER URL API",
    "description": "API that generates shortened URLs from a valid URL",
    "version": "1.0.0"
  },
  "host": "localhost:3333",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/createurl": {
      "post": {
        "description": "Create a new shortener URL",
        "parameters": [
          {
            "name": "url",
            "in": "body",
            "description": "Create a new shortener url",
            "schema": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "example": "https:www.anydomain.com.br"
                }
              },
              "required": [
                "url"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema":{
              "type":"object",
              "properties": {
                "url":{
                  "type":"string"
                },
                "hash":{
                  "type":"string"
                },
                "shortUrl":{
                  "type":"string"
                },
                "isShortened":{
                  "type":"boolean"
                },
                "isActive":{
                  "type":"boolean"
                },
                "expiresAt":{
                  "type":"string"
                },
                "_id":{
                  "type":"string"
                },
                "createdAt":{
                  "type":"string"
                },
                "message":{
                  "type":"string"
                }
              }
            }
          },
          "400":{
            "description": "Bad Request"
          }
        }
      }
    },
    "/recreateurl": {
      "post": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    }
  }
}
